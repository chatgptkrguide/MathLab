# Server Configuration
NODE_ENV=development
PORT=8080
API_VERSION=v1

# Database Configuration (Cloud SQL PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mathlab
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_SSL=false

# Redis Configuration (Memorystore)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Google OAuth (소셜 로그인)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Kakao OAuth
KAKAO_REST_API_KEY=your_kakao_rest_api_key
KAKAO_REDIRECT_URI=http://localhost:8080/api/v1/auth/kakao/callback

# Apple OAuth
APPLE_CLIENT_ID=com.mathlab.app
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY_PATH=./secrets/apple_private_key.p8

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://mathlab.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Cloud Storage
GCS_BUCKET_NAME=mathlab-assets
GCS_PROJECT_ID=mathlab-gcp-project

# Firebase Cloud Messaging
FCM_SERVER_KEY=your_fcm_server_key

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log

# Security
BCRYPT_ROUNDS=12
